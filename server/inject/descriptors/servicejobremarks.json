{
  "type": "object",
  "comment": "Forms",
  "properties": {
    "additionalinformation": {
      "type": "string",
      "label": "TextInput",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "#Remarks",
      "control": "text"
    },
    "save": {
      "type": "action",
      "selector": ".btn.btn-info.text-right",
      "control": "action.button"
    },
    "remarklist": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "jobnumber": {
            "type": "string",
            "control": "property.innerText",
            "selector": "td"
          },
          "remark": {
            "type": "string",
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 1
          },
          "createddate": {
            "type": "string",
            "selector": "td",
            "selectIndex": 2,
            "control": "property.innerText"
          }
        }
      },
      "selectorAll": "#gdServiceJobRemarksDetails table tbody tr"
    },
    "isremarks": {
      "type": "identifier",
      "selector": "label",
      "control": "exists",
      "selectContains": "Addition Information"
    },
    "close": {
      "type": "action",
      "selector": "#ServiceJobRemarks > div > div > div.modal-header > button",
      "control": "action.link"
    }
  },
  "connect": [],
  "selector": "#ServiceJobRemarksPopup"
}
