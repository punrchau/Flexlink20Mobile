{
  "type": "object",
  "comment": "ListView",
  "properties": {
    "isservicejob": {
      "type": "identifier",
      "selector": "#liActiveServiceJobs",
      "control": "exists"
    },
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "action",
            "selector": "#comment",
            "control": "action.button"
          },
          "ticketnumber": {
            "type": "string",
            "update": {
              "type": "none"
            },
            "selector": "td",
            "control": "property.innerText",
            "selectIndex": 1
          },
          "status": {
            "type": "string",
            "selector": "td",
            "selectIndex": 3,
            "control": "property.innerText"
          },
          "firstname": {
            "type": "string",
            "selector": "td",
            "selectIndex": 5,
            "control": "property.innerText"
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": "#gdRepairJobs table tbody tr"
    }
  },
  "connect": [
    {
      "match": [
        "isServiceJob",
        "servicejobs.isServiceJob",
        "isservicejob"
      ],
      "screens": [
        "servicejob"
      ]
    }
  ]
}
