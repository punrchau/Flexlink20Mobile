{
  "type": "object",
  "comment": "ListView",
  "properties": {
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "action",
            "selector": ".btn.btn-info.ng-scope",
            "control": "action.button"
          },
          "ticketnumber": {
            "type": "string",
            "update": {
              "type": "none"
            },
            "selector": "td",
            "control": "property.innerText"
          },
          "firstname": {
            "type": "string",
            "selector": "td",
            "selectIndex": 13,
            "control": "property.innerText"
          },
          "problemcategory": {
            "type": "string",
            "selector": "td",
            "selectIndex": 1,
            "control": "property.innerText"
          },
          "lastname": {
            "type": "string",
            "selector": "td",
            "selectIndex": 14,
            "control": "property.innerText"
          },
          "mobilenumber": {
            "type": "string",
            "selector": "td",
            "selectIndex": 15,
            "control": "property.innerText"
          },
          "pickupaddress": {
            "type": "string",
            "selector": "td",
            "selectIndex": 16,
            "control": "property.innerText"
          },
          "selectRecord": {
            "type": "action",
            "selector": ".",
            "control": "action.link"
          },
          "isImp": {
            "type": "boolean",
            "selector": {
              "fn": "function(node){if(node.getAttribute('class')=='k-alt'){return true}else{return false}}",
              "selector": ""
            },
            "control": "property.className"
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": "#gdRepairJobs table tbody tr"
    },
    "selectTabs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tabName": {
            "type": "string",
            "selector": "a",
            "control": "property.innerText"
          },
          "isSelected": {
            "type": "boolean",
            "control": "exists",
            "selector": {
              "fn": "function(node){if(node.getAttribute('class')=='active'){return true}}",
              "selector": ""
            }
          },
          "clickTab": {
            "type": "action",
            "control": "action.link",
            "selector": "a"
          }
        }
      },
      "selectorAll": "#stateTabs li"
    },
    "isrepairjob": {
      "type": "identifier",
      "selector": "#liRepairJobs",
      "control": "exists"
    },
    "viewRecord": {
      "type": "action",
      "selector": ".btn.btn-info.ng-scope",
      "control": "action.button",
      "selectContains": "EDIT"
    }
  },
  "connect": [
    {
      "match": [
        "isrepairjob"
      ],
      "screens": [
        "servicejob"
      ]
    }
  ]
}
