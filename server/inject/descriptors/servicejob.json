{
  "type": "object",
  "comment": "ListView",
  "properties": {
    "listItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "action",
            "selector": ".btn.btn-info.ng-scope",
            "control": "action.button"
          },
          "ticketnumber": {
            "type": "string",
            "update": {
              "type": "none"
            },
            "selector": "td",
            "control": "property.innerText"
          },
          "status": {
            "type": "string",
            "selector": "td",
            "selectIndex": 5,
            "control": "property.innerText"
          },
          "firstname": {
            "type": "string",
            "selector": "td",
            "selectIndex": 4,
            "control": "property.innerText"
          },
          "problemcategory": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "mobilenumber": {
            "type": "string"
          },
          "pickupaddress": {
            "type": "string"
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": "#gdRepairJobs table tbody tr"
    },
    "selectTabs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tabName": {
            "type": "string",
            "selector": "a",
            "control": "property.innerText"
          },
          "isSelected": {
            "type": "boolean",
            "control": "exists",
            "selector": {
              "fn": "function(node){if(node.getAttribute('class')=='active'){return true}}",
              "selector": ""
            }
          },
          "clickTab": {
            "type": "action",
            "selector": "a",
            "control": "action.button"
          }
        }
      },
      "selectorAll": "#stateTabs li"
    },
    "isrepairjob": {
      "type": "identifier",
      "selector": "#liRepairJobs",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "isrepairjob"
      ],
      "screens": [
        "servicejob"
      ]
    }
  ]
}
