{
  "type": "object",
  "comment": "DetailsView",
  "properties": {
    "description": {
      "type": "string",
      "label": "Description",
      "selector": "#fileDescription",
      "control": "text"
    },
    "close": {
      "type": "action",
      "label": "Title",
      "control": "action.button",
      "selector": "#fileUpload > div > div > div.modal-body > div.modal-footer > button.btn.btn-default"
    },
    "save": {
      "type": "action",
      "label": "DescriptShort",
      "selector": "#fileUpload > div > div > div.modal-body > div.modal-footer > button.btn.btn-info",
      "control": "action.button"
    },
    "attachementcontent": {
      "type": "string",
      "update": {
        "type": "action",
        "action": [
          "action"
        ]
      },
      "selector": "#myFile",
      "control": "property.innerText"
    },
    "isphotoupload": {
      "type": "identifier",
      "control": "exists",
      "selector": {
        "fn": "function(node){if(document.activeElement.id=='fileUpload'){return true}else{return false}}",
        "selector": ""
      }
    }
  },
  "connect": [
    {
      "match": [
        "isphotoupload"
      ],
      "screens": [
        "photoupload"
      ]
    }
  ]
}
